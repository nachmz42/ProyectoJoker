package com.joker.control;

import java.io.IOException;
import java.sql.SQLException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;

import com.eoi.modelo.Usuario;
import com.eoi.modelo.UsuarioDAO;
import com.eoi.modelo.Pregunta;
import com.eoi.modelo.PreguntaDAO;


@WebServlet("/Login")
public class Login extends HttpServlet {
	
       
   
   

	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		
		String email= request.getParameter("email");
		String pass= request.getParameter("password");
		
		UsuarioDAO udao= new UsuarioDAO();
		Usuario usu=null;
		String pageDest="index.jsp";
		
		
		try {
			 emp= edao.login(email, pass);
			
			
			//empleado existe en la BDD
			if(emp!= null) {
				pageDest="datosdepartamentos.jsp";
				HttpSession sesion= request.getSession();
				sesion.setAttribute("nomemp", emp.getNomemp());
				sesion.setAttribute("rol", emp.getRol());
				
				
			}else {
				String msgerr= "usuario y constraseña incorrecta";
				request.setAttribute("msgerr", msgerr);
				
				//empleado no existe en la bdd
			}
		} catch (SQLException e) {
			
			e.printStackTrace();
		}
		
		RequestDispatcher rd= request.getRequestDispatcher(pageDest);
		rd.forward(request, response);
	}

}