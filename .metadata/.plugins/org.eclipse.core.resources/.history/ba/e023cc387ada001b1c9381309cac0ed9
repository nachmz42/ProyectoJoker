package com.eoi.controlador;

import java.io.IOException;
import java.sql.SQLException;

import javax.servlet.RequestDispatcher;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import com.eoi.modelos.Departamento;
import com.eoi.modelos.DepartamentoDAO;



/**
 * Servlet implementation class Controlador
 */
@WebServlet("/Controlador")
public class Controlador extends HttpServlet {
	private static final long serialVersionUID = 1L;
	String coddepto;
	protected void doGet(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		String opcion  = request.getParameter("opcion");
		coddepto =  request.getParameter("coddepto");
		DepartamentoDAO ddao = new DepartamentoDAO();
		Departamento depto = null;
		String pageDest = "datosdepartamento.jsp";
		
		switch(opcion){
		case "e":
			try {
				depto = ddao.getDpto(coddepto);
				request.setAttribute("depto", depto);
				pageDest = "editardepartamento.jsp";
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			break;
		
		case "b":
			try {
				ddao.borrarDpto(coddepto);
			} catch (SQLException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			break;
		}
	
		RequestDispatcher rd = request.getRequestDispatcher(pageDest);
		rd.forward(request, response);
	}

	
	
	
	protected void doPost(HttpServletRequest request, HttpServletResponse response) throws ServletException, IOException {
		DepartamentoDAO ddao = new DepartamentoDAO();
		Departamento depto = null;
		String ciudad = request.getParameter("ciudad");
		String nomdepto = request.getParameter("nombredpto");
		String coddirector = request.getParameter("coddirector");
		String pageDest ="datosdepartamento.jsp";
		
		System.out.println(coddepto);
		System.out.println(nomdepto);
		System.out.println(coddirector);
		System.out.println(ciudad);
		
		depto= new Departamento(coddepto,nomdepto,ciudad,coddirector);
		
		
			
		try {
			ddao.modDpto(depto);
			System.out.println("GHOLA");
			System.out.println(depto.getCoddepto());
			System.out.println(depto.getNombredpto());
			System.out.println(depto.getCiudad());
			System.out.println(depto.getCoddirector());
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		RequestDispatcher rd = request.getRequestDispatcher(pageDest);
		rd.forward(request, response);
		
	}

}
